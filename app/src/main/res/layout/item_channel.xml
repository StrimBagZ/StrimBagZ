<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:clickable="true"
    android:orientation="vertical" android:layout_width="180dp"
    android:layout_height="180dp">

    <ImageView
        android:id="@+id/channelLogo"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:layout_width="match_parent"
        android:background="@drawable/player_gradient_bottom"
        android:layout_alignBottom="@id/channelLogo"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/channelFollowers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="420.069 followers"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:layout_marginStart="4dp"
        android:layout_above="@+id/username"
        android:layout_alignBottom="@id/channelLogo"
        android:layout_alignStart="@+id/channelLogo"
        android:layout_alignEnd="@+id/channelLogo" />

    <TextView
        android:id="@+id/channelUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TrevPerson"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="15dp"
        android:layout_alignBottom="@+id/channelLogo"
        android:layout_alignStart="@+id/channelFollowers"
        android:layout_alignEnd="@+id/channelLogo" />

</RelativeLayout>